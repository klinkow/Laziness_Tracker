<p id="notice"><%= notice %></p>

<h1>Lazies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lazies.each do |lazy| %>
      <tr>
        <td><%= link_to 'Show', lazy %></td>
        <td><%= link_to 'Edit', edit_lazy_path(lazy) %></td>
        <td><%= link_to 'Destroy', lazy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

